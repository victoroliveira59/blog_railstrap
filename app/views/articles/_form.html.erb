<%=form_with model: article do |form| %>

  <div class="mb-2 p-1 ">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% if article.present? %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div> <%= message %></div>
      <% end %>
    <% end %>
  </div>

  <div class="mb-2">
    <%= form.label :body %>
    <%= form.text_area :body %>
      <% if article.present? %>
        <% article.errors.full_messages_for(:body).each do |message| %>
          <div> <%= message %></div>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<%end %>