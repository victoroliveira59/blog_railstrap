<p>
  <%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
</p>
<%#= link_to "Back to categories", categories_path %>

<table class="table table-striped table table-bordered table table-striped table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td>
        <%= category.name %>
      </td>
      <td>
        <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-secondary' %>
        <%= link_to 'Delete', category, data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?" }, class: 'btn btn-danger'%>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
